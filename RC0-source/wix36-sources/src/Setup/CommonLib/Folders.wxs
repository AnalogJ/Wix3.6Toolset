<?include WixVer.wxi ?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <Directory Id="TARGETDIR" Name="SourceDir" />
    </Fragment>

    <Fragment>
        <DirectoryRef Id="TARGETDIR">
            <Directory Id="ProgramFilesFolder" >
                <Directory Id="InstallFolder" Name="WiX Toolset v$(var.WixMajorMinor)" />
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <DirectoryRef Id="TARGETDIR">
            <Directory Id="ProgramMenuFolder" Name="ProgMenu">
                <Directory Id="ShortcutFolder" Name="WiX Toolset v$(var.WixMajorMinor)" />
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <DirectoryRef Id="InstallFolder">
            <Directory Id="BinFolder" Name="bin">
                <Directory Id="BurnX86Folder" Name="x86" />
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <DirectoryRef Id="InstallFolder">
            <Directory Id="DocFolder" Name="doc" />
        </DirectoryRef>
    </Fragment>

    <!--
        MSBuild
    -->
    <Fragment>
        <DirectoryRef Id="ProgramFilesFolder">
            <Directory Id="MSBuildFolder" Name="MSBuild">
                <Directory Id="MSBuildMSFolder" Name="Microsoft">
                    <Directory Id="MSBuildMSWixFolder" Name="WiX">
                        <Directory Id="MSBuildMSWix3xFolder" Name="v3.x"/>
                    </Directory>
                </Directory>
            </Directory>
        </DirectoryRef>
    </Fragment>

    <!--
        SDK
    -->
    <Fragment>
        <DirectoryRef Id="InstallFolder">
            <Directory Id="SdkFolder" Name="SDK" />
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <DirectoryRef Id="SdkFolder">
            <Directory Id="SdkX86Folder" Name="x86" />
            <Directory Id="SdkX64Folder" Name="x64" />
        </DirectoryRef>
    </Fragment>

    <!--
        VS2005
    -->
    <Fragment>
        <DirectoryRef Id="ProgramFilesFolder">
            <Directory Id="VisualStudio2005Folder" Name="Microsoft Visual Studio 8">
                <Directory Id="Common7Vs2005" Name="Common7">
                    <Directory Id="IDEVs2005" Name="IDE"/>
                </Directory>
                <Directory Id="XmlVs2005" Name="Xml"/>
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS2005_ITEMTEMPLATES_DIR" />

        <DirectoryRef Id="IDEVs2005">
            <Directory Id="VS2005_ITEMTEMPLATES_DIR" Name="ItemTemplates">
                <Directory Id="VsItemTemplatesWix2005Folder" Name="WiX" />
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS2005_PROJECTTEMPLATES_DIR" />

        <DirectoryRef Id="IDEVs2005">
           <Directory Id="VS2005_PROJECTTEMPLATES_DIR" Name="ProjectTemplates">
               <Directory Id="VsProjectTemplatesWix2005Folder" Name="WiX" />
           </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS2005_SCHEMAS_DIR" />

        <DirectoryRef Id="XmlVs2005">
            <Directory Id="VS2005_SCHEMAS_DIR" Name="Schemas" />
        </DirectoryRef>
    </Fragment>

    <!--
        VS2008
    -->
    <Fragment>
        <DirectoryRef Id="ProgramFilesFolder">
            <Directory Id="VisualStudio2008Folder" Name="Microsoft Visual Studio 9.0">
                <Directory Id="Common7Vs2008" Name="Common7">
                    <Directory Id="IDEVs2008" Name="IDE"/>
                </Directory>
                <Directory Id="XmlVs2008" Name="Xml"/>
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS90_ITEMTEMPLATES_DIR" />

        <DirectoryRef Id="IDEVs2008">
            <Directory Id="VS90_ITEMTEMPLATES_DIR" Name="ItemTemplates">
                <Directory Id="VsItemTemplatesWix2008Folder" Name="WiX" />
            </Directory>
        </DirectoryRef>
    </Fragment>
    
    <Fragment>
        <PropertyRef Id="VS90_PROJECTTEMPLATES_DIR" />

        <DirectoryRef Id="IDEVs2008">
            <Directory Id="VS90_PROJECTTEMPLATES_DIR" Name="ProjectTemplates">
                <Directory Id="VsProjectTemplatesWix2008Folder" Name="WiX" />
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS90_SCHEMAS_DIR" />

        <DirectoryRef Id="XmlVs2008">
            <Directory Id="VS90_SCHEMAS_DIR" Name="Schemas" />
        </DirectoryRef>
    </Fragment>

    <!--
        VS2010
    -->
    <Fragment>
        <DirectoryRef Id="ProgramFilesFolder">
            <Directory Id="VisualStudio2010Folder" Name="Microsoft Visual Studio 10.0">
                <Directory Id="Common7Vs2010" Name="Common7">
                    <Directory Id="IDEVs2010" Name="IDE"/>
                </Directory>
                <Directory Id="XmlVs2010" Name="Xml"/>
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS2010_EXTENSIONS_DIR" />

        <DirectoryRef Id="IDEVs2010">
            <Directory Id="VS2010_EXTENSIONS_DIR" Name="Extensions">
                <Directory Id="VsExtensions2010Microsoft" Name="Microsoft">
                    <Directory Id="VsExtensions2010MicrosoftWix" Name="WiX">
                        <Directory Id="VsItemTemplatesWix2010Folder" Name="ItemTemplates" />
                        <Directory Id="VsProjectTemplatesWix2010Folder" Name="ProjectTemplates" />
                    </Directory>
                </Directory>
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS2010_SCHEMAS_DIR" />

        <DirectoryRef Id="XmlVs2010">
            <Directory Id="VS2010_SCHEMAS_DIR" Name="Schemas" />
        </DirectoryRef>
    </Fragment>

    <!--
        VS11
    -->
    <Fragment>
        <DirectoryRef Id="ProgramFilesFolder">
            <Directory Id="VisualStudio11Folder" Name="Microsoft Visual Studio 11.0">
                <Directory Id="Common7Vs11" Name="Common7">
                    <Directory Id="IDEVs11" Name="IDE"/>
                </Directory>
                <Directory Id="XmlVs11" Name="Xml"/>
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS11_EXTENSIONS_DIR" />

        <DirectoryRef Id="IDEVs11">
            <Directory Id="VS11_EXTENSIONS_DIR" Name="Extensions">
                <Directory Id="VsExtensions11Microsoft" Name="Microsoft">
                    <Directory Id="VsExtensions11MicrosoftWix" Name="WiX">
                        <Directory Id="VsItemTemplatesWix11Folder" Name="ItemTemplates" />
                        <Directory Id="VsProjectTemplatesWix11Folder" Name="ProjectTemplates" />
                    </Directory>
                </Directory>
            </Directory>
        </DirectoryRef>
    </Fragment>

    <Fragment>
        <PropertyRef Id="VS11_SCHEMAS_DIR" />

        <DirectoryRef Id="XmlVs11">
            <Directory Id="VS11_SCHEMAS_DIR" Name="Schemas" />
        </DirectoryRef>
    </Fragment>
</Wix>
