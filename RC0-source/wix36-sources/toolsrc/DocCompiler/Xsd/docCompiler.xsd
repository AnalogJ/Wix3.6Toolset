<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://schemas.microsoft.com/wix/2005/DocCompiler"
              xmlns="http://schemas.microsoft.com/wix/2005/DocCompiler">
